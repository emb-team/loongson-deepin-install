#!/bin/bash

if [ -f /deepinhost/etc/deepin-installer.conf ];then
    . /deepinhost/etc/deepin-installer.conf
fi

DI_LOCALE=${DI_LOCALE:-en_US}
CODENAME=${CODENAME:-testing}

case ${DI_LOCALE} in
    *)
        deepin_url="http://packages.linuxdeepin.com"
        debian_url="http://ftp.cn.debian.org"
        ;;
esac

cat > /etc/apt/sources.list <<EOF
# Generated by deepin-installer
deb ${debian_url}/debian ${CODENAME} main non-free contrib
deb ${deepin_url}/loongson ${CODENAME} main
EOF
